
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap-lumen-v3.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/login.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
    <title>Login</title>
</head>
<body>
    <!------ Include the above in your HEAD tag ---------->
    <div class="wrapper fadeInDown">
        <div id="formContent">

            <div id="loginHeader">
                <div id="divLoginText"><h1 id="loginText">Login</h1></div>
            </div>
            <form>

                <input type="text" id="login" class="fadeIn second userNameField" name="login" placeholder="User Name">
                <input type="password" id="password" class="fadeIn third passwordField" name="login" placeholder="Password"><br>
                <input type="submit" class="fadeIn fourth loginButton" value="Log In">
                <input id="registerButton" type="submit" class="fadeIn fourth registerButton" value="Register">
            </form>
            <!-- Remind Passowrd -->
            <div id="formFooter">
                <div class="underlineHoverForgotPassword">New User! Register above</div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
</body>
</html>